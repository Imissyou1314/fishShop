<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:orientation="vertical" >

    <FrameLayout style="@style/TitleTheme" >

        <TextView
            android:id="@+id/text_home_loc"
            style="@style/TitleLeftTheme"
            android:clickable="true"
            android:drawableLeft="@drawable/title_back"
            android:drawableStart="@drawable/title_back"
            android:marqueeRepeatLimit="marquee_forever"
            android:onClick="onBack"
            android:singleLine="true"
            android:text="我的" />

        <TextView
            android:id="@+id/text_activity_goodlist_title"
            style="@style/TitleMiddleTheme"
            android:text="管理收货地址" />

        <ImageView
            style="@style/TitleRightTheme"
            android:onClick="onAdd"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:src="@drawable/add" />
    </FrameLayout>

    <com.zhanjixun.views.ReflashListView
        android:id="@+id/id_mp_admanage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/page_bg"
        android:descendantFocusability="blocksDescendants"
        android:divider="@color/page_bg"
        android:dividerHeight="@dimen/listViewDividerHeight"
        android:scrollbars="none" />

</LinearLayout>