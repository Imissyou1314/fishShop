<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_car_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg" >

    <FrameLayout
        android:id="@+id/title_car"
        style="@style/TitleTheme"
        android:layout_alignParentTop="true" >

        <TextView
            android:id="@+id/title_me_order_login_msg"
            style="@style/TitleMiddleTheme"
            android:text="@string/main_me" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/text_me_unlogin_msg"
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="你还没有登录"
            android:textColor="@color/theme_normal"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_me_login"
            android:layout_width="120dip"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_me_unlogin_msg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@color/theme"
            android:onClick="onClick"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:tag="login"
            android:text="登录"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </RelativeLayout>

</RelativeLayout>